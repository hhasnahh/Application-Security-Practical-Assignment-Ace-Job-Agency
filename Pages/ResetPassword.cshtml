@page
@model AceJobAgencyPortal.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="portal-card">
            <div class="section-title" style="font-size:28px;">Reset Password</div>
            <div class="subtext">Set a new strong password. No spaces allowed.</div>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>

                    <div class="pw-wrap">
                        <input id="resetPw" asp-for="NewPassword" type="password" class="form-control" />
                        <button type="button" class="pw-toggle" onclick="togglePw('resetPw', this)">🙈</button>
                    </div>

                    <div class="d-flex gap-2 mt-2">
                        <button type="button"
                                class="btn btn-outline-light btn-sm"
                                data-pwgen data-target="resetPw" data-confirm="resetPw2">
                            Generate strong password
                        </button>

                        <button type="button"
                                class="btn btn-outline-light btn-sm"
                                data-pwcopy data-target="resetPw">
                            Copy
                        </button>
                    </div>

                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>

                    <div class="pw-wrap">
                        <input id="resetPw2" asp-for="ConfirmPassword" type="password" class="form-control" />
                        <button type="button" class="pw-toggle" onclick="togglePw('resetPw2', this)">🙈</button>
                    </div>

                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-primary w-100" type="submit">Reset Password</button>

                <div class="text-center mt-3">
                    <a asp-page="/Login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
